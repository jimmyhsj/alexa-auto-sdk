<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_nav_host_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/navigation_horizontal_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/navigate_back_button"
        android:tag="nav_back_button"
        android:layout_width="@dimen/nav_bar_icon_height_width"
        android:layout_height="@dimen/nav_bar_icon_height_width"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginStart="@dimen/setting_item_horizontal_margin"
        android:layout_marginTop="@dimen/setting_item_vertical_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/navigation_title_txtview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        tools:ignore="ContentDescription">
    </ImageView>

    <TextView
        android:id="@+id/navigation_title_txtview"
        android:textAppearance="@style/Alexa.TitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/setting_item_horizontal_margin_double"
        app:layout_constraintTop_toTopOf="@+id/navigate_back_button"
        app:layout_constraintStart_toEndOf="@+id/navigate_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="10" />
</androidx.constraintlayout.widget.ConstraintLayout>